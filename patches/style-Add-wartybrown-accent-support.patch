+  else if (g_str_equal (yaru_accent, "wartybrown"))
+    rgba_hex = 0xb39169;
 
   if (G_UNLIKELY (rgba_hex == 0))
     {
@@ -313,6 +317,8 @@ compute_yaru_accent_from_system_accent (AdwSettings *self)
